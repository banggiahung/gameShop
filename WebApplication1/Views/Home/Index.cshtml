@{
    ViewData["Title"] = "Home Page";
}
@model List<WebApplication1.Models.Product>
<div id="main_frontEnd">
    <div class="row d-flex slider">
        <div class="col-12 ">
            <div id="carouselExample" class="carousel slide ">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img :src="imgBanner1" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img :src="imgBanner2" class="d-block w-100"
                             alt="...">
                    </div>
                    <div class="carousel-item">
                        <img :src="imgBanner3" class="d-block w-100" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                        data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                        data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
 
    <div class="new-game">
        <h3 class="nk-decorated-h-2 ">
            <span>
                <span class="text-main-1">GAMES</span><span class="text-light">
                    HOT
                </span>
            </span>
        </h3>
    </div>
    <div class="row list-game-hot">
        <div class="col-12 col-lg-6 col-md-12  col-xl-6 nk-news-box">
            <div class="nk-news-box-each-info">
                <div class="nano">
                    <div class="nano-content">
                        <div class="nk-news-box-item-image">
                            <img width="1920" height="1080"
                                 :src="mainImgGame"
                                 class="nk-news-box-item-img entered lazyloaded"><noscript>
                                <img width="1920" height="1080"
                                     :src="mainImgGame"
                                     class="nk-news-box-item-img" />
                            </noscript>
                        </div>

                        <h3 class="nk-news-box-item-title text-main-1"><a :href=`/Home/DetailsProduct/${idGame}`>{{nameGame}}</a></h3>
                        <div class="nk-news-box-item-text text-light">
                            {{desShortGame}}...
                        </div>
                        <a :href=`/Home/DetailsProduct/${idGame}` class="nk-news-box-item-more text-main-1">Xem bài này</a>
                        <div class="nk-news-box-item-date text-light">
                            <i class="fa-solid fa-calendar-alt mr-5  "></i> {{formatDate(new Date(createDateGame))}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6 col-md-12 col-xl-6">
            <div class="row">
                <div class="col-12" v-for="(item, index) in dataLatest">
                    <div class="nk-news-box-item ">
                        <div class="nk-news-box-item-img">
                            <img width="380" height="214"
                                 :src="item.mainImg"
                                 class="nk-news-box-item-img entered lazyloaded"
                                 data-ll-status="loaded"><noscript>
                                <img width="380" height="214"
                                     :src="item.mainImg"
                                     class="nk-news-box-item-img" alt="Dead Island 2" />
                            </noscript>
                        </div>
                        <h3 class="nk-news-box-item-title">
                            <a :href=`/Home/DetailsProduct/${item.id}`
                               class="text-white">{{item.name}}</a>
                        </h3>

                        <div class="nk-news-box-item-text text-light">
                            <p>
                                {{item.desShort}}...
                            </p>
                        </div>
                        <div class="nk-news-box-item-date text-light">
                            <i class="fa-solid fa-calendar-alt mr-5"></i> {{formatDate(new Date(item.createDate))}}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="new-game mt-5">
        <h3 class="nk-decorated-h-2 ">
            <span>
                <span class="text-main-1">GAMES</span><span class="text-light">
                    MỚI
                </span>
            </span>
        </h3>
    </div>
    <div class="row game-news">
        <div class="col-6 col-md-4 col-lg-3" v-for="(product, index) in displayedItems" :key="index">
            <div class="nk-blog-post">
                <a :href=`/Home/DetailsProduct/${product.id}`
                   class="nk-post-img">
                    <img width="380" height="218"
                         :src="product.mainImg"
                         class="game-image wp-post-image entered lazyloaded"
                         decoding="async"
                         title="My Mundane Life Is Threatened by the Tropes of an RPG!!! 2"
                         data-ll-status="loaded"><noscript>
                        <img width="380" height="218"
                             :src="product.mainImg"
                             class="game-image wp-post-image"
                             decoding="async"
                             title="My Mundane Life Is Threatened by the Tropes of an RPG!!! 2">
                    </noscript> 
                    <span class="nk-post-categories">
                        <span class="bg-main-5" style="background-color: #81d742 !important;">
                            <i class="fa-solid fa-bells mr-4"></i>GAME MỚI
                        </span>
                    </span>
                </a>
                <div class="nk-gap"></div>
                <h2 class="nk-post-title h4 text-light">
                    <a class="fix-line"
                       :href=`/Home/DetailsProduct/${product.id}`>
                        {{product.name}}
                    </a>
                </h2>
                <div class="hnc-theloai text-light">
                    <i class="fa-solid fa-tags mr-5 text-light"></i>
                    <a 
                       rel="category tag" class="text-main-1" v-for="json in product.cateJsonApi"
                       :href=`/Home/ProductByCate/${json.id}`> {{json.name}}<span class="text-light"> ,</span> </a>
                </div>
                <div class="game-info">
                    <div class="view-btn">
                        <a :href="`/Home/DetailsProduct/${product.id}`"
                           class="text-white">Tải Game</a>
                    </div>

                </div>
               
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <a class="btn btn-outline-success" href="/Home/ProductShop">Xem thêm <i class="fa-solid fa-angle-right"></i></a>
        </div>

    </div>

